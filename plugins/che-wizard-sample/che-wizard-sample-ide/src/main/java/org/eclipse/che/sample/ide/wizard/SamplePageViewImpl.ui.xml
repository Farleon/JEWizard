<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style >
        .mainDoc {
            margin: 15px;
        }

        .mainDoc div {
            overflow: visible !important;
        }
        .line{
            margin-bottom: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel width="100%" height="100%" addStyleNames="{style.mainDoc}">
        <g:north size="100">
            <g:VerticalPanel>
                <g:HorizontalPanel addStyleNames="{style.line}">
                    <g:Label text="To use plugin you must first register Juju. Otherwise you will not be able to obtain full functionality." />
                </g:HorizontalPanel>
                <g:HorizontalPanel addStyleNames="{style.line}">
                    <g:Label text="Deploy to (juju unit name):" />
                    <g:TextBox width="500px" ui:field="deployGoal"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel addStyleNames="{style.line}">
                    <g:Label text="Select component to support:" />
                     <g:ListBox ui:field='technologies' />
                     <g:ListBox ui:field='projecttypes'/>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>
